extends includes/layout

block content

    section#wrapper.home

        div.archive

            each posts, year in _.groupBy(site.posts.sort('date', -1).toArray(), function(p){return -p.date.format('YYYY')})
              h5=-year
              for item in posts
                - var postTitle = item.title || 'No Title'
                - var createDate = date(item.date, 'MM-DD')
                ul
                  div.post-item
                      div.post-time=createDate
                      if item.link
                          a.post-link(href=url_for(item.link))= postTitle
                      else
                          a.post-link(href=url_for(item.path))= postTitle



